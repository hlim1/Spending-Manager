<%= form_with(model: [@account, Breakdown.new]) do |form| %>
  <% if @breakdown.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@breakdown.errors.count, "error") %> prohibited this breakdown from being saved:</h2>

      <ul>
      <% @breakdown.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :breakdown_date %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :breakdown_content %>
  </div>

  <div class="field">
    <%= form.label :activityType %>
    <%= form.select :activityType, options_for_select([['DEBIT', 'DEBIT'], ['CREDIT', 'CREDIT']]), id: :breakdown_content %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :breakdown_amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
