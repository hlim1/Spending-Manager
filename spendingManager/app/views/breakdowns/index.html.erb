<p id="notice"><%= notice %></p>

<h1>Breakdowns</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Content</th>
      <th>Amount</th>
      <th>Currentbalance</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breakdowns.each do |breakdown| %>
      <tr>
        <td><%= breakdown.date %></td>
        <td><%= breakdown.content %></td>
        <td><%= breakdown.amount %></td>
        <td><%= breakdown.currentBalance %></td>
        <td><%= breakdown.account %></td>
        <td><%= link_to 'Show', breakdown %></td>
        <td><%= link_to 'Edit', edit_breakdown_path(breakdown) %></td>
        <td><%= link_to 'Destroy', breakdown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

