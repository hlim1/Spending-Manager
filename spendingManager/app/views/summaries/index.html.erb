<div class="accounts">
  <h1>Account List</h1>

  <br />

  <table>
    <thead>
      <tr>
        <th>Financial Institution</th>
        <th>Account Number (Last 4-digits)</th>
        <th>Current Balance</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <% if account.user == current_user %> <!--Current user can see only his/her own list-->
          <tr>
            <td><%= account.name %></td>
            <td><%= account.accountNumber %></td>
            <td><%= account.balance.to_money %></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

