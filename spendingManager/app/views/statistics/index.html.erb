<div class="accounts">
  <h1>Statistics</h1>
  <!--Able to create bar, line, and pie charts just by replacing .bar into right type name-->
  <%= image_tag(Gchart.bar :size => '600x400', 
                           :stacked => false,
                           :title => 'Chart Example',
                           :data => [1,4,3,5,9],
                           :legend => ['example-1'],
                           :bar_colors => ['3300CC','3399FF','33CCFF'],
                           :axis_with_labels => [['x'],['y']],
                           :axis_range =>[nil, [0,15,1]],
                           :axis_labels => [["A|B|C|D|E"]]
                           ) %>

  <%= image_tag(Gchart.line :size => '600x400', 
                            :stacked => false,
                            :title => 'Monthly Spending',
                            :data => @mTotals,
                            :axis_with_labels => [['x'],['y']],
                            :axis_range => [nil, [0,2700,100]],
                            :axis_labels => [["Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec"]]
                           ) %>

  <div id="test-remove-later">
  <br>
    <% @mTotals.each do |mt| %>
      <%= mt %>
      <br>
    <% end %>
  </div>
      
</div>
