<div class="accounts">
  <div class="page-name">
    <h1>Statistics</h1>
  </div>

  <br/>

  <div>
    <h3 id="monthly-sum">Monthly Spending (Debit)</h3>
    <%= line_chart @mTotals.each { |mtotal| { data: mtotal[0][1] } }, width: "98%", height: "400px",
        library: {backgroundColor: "#f2efed"}, xtitle: "Month", ytitle: "Total ($)" %>
  </div>
  <br/>
  <div>
    <h3 id="monthly-sum">Monthly Income (Credit)</h3>
    <%= line_chart @mIncomes.each { |mincome| { data: mincome[0][1] } }, width: "98%", 
        height: "400px", library: {backgroundColor: "#f2efed"}, xtitle: "Month", 
        ytitle: "Total ($)" %>
  </div>
  <br/>
  <div id="piechart">
    <table class="table-layout">
      <thead>
        <tr>
          <th><h3>Spending Categories</h3></th>
          <th><h3>Spending Habit by Account</h3></th>
        </tr>
      </thead>
      <tbody>
        <tr class="charts">
          <td><%= pie_chart @spendingTypes, width: "650px", height: "400px", 
                  library: {backgroundColor: "#f2efed"} %>
          </td>
          <td>
            <%= column_chart @acctHabitforChart.each {|ash| { data: ash } },
                width: "650px", height: "400px", library: {backgroundColor: "#f2efed"}, 
                xtitle: "Bank", ytitle: "Yearly Spent ($)" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
