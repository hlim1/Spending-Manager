<div id="registration">
  <div class="title-bar">
    <h2>Sign up for <span class="application-name">Spending Manager</span></h2>
  </div>

  <div class="sign-info">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :firstname %>
        <%= f.text_field :firstname, autofocus: true, placeholder: "First name" %>
      </div>

      <div class="field">
        <%= f.label :lastname %>
        <%= f.text_field :lastname, autofocus: true, placeholder: "Last name" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "email"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %><br/>
        <% if @minimum_password_length %>
          <em class="password-rule">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :Confirm_password %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "submit-btn" %>
      </div>
    <% end %>
  </div>

  <p id="splitter">--------------------------------------</p>

  <div id="already-member">
    <p>Already a member?</p>
    <%= render "devise/shared/links" %>
  </div>
</div>
